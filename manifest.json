{
  "manifest_version": 2,

  "name": "Browser Player",
  "description": "One controller for your internet video and music",
  "version": "0.5",
  "background": {
    "scripts": [
      "init.js",
      "main.js",
      "controller.js",
      "button.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "icons": { "512": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Nothing playing",
    "icon_credit": "http://www.flaticon.com/authors/freepik"
  },
  "permissions": [
    "tabs", "<all_urls>"
  ]
}